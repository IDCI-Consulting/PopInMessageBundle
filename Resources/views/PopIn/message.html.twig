<div id="idci-pop-in-{{ id }}" class="idci-pop-in alert alert-dismissible fade in text-center" role="alert">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                {{ title|raw }}
            </div>
            <div class="modal-body">
                {{ content|raw }}
            </div>
            <div class="modal-footer">
                {{ footer|raw }}
            </div>
        </div>
    </div>
</div>